/* pages/create-poster/one-img/index.wxss */
.out {
  width: 750rpx;
}

.wrapper {
  width: 675rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  margin: 30rpx auto;
}

.img_area {
  width: 638rpx;
  height: 638rpx;
  position: relative;
  margin: 27rpx auto;
}

.product_img {
  width: 638rpx;
  height: 638rpx;
}

.choose_img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.info_area {
  width: 618rpx;
  margin: auto;
}

.price_tag {
  font-size: 27rpx;
  color: #FF5447;
  font-weight: bold;
}

.price {
  font-size: 54rpx;
  color: #FF5447;
  font-weight: bold;
}

.price_tail {
  font-size: 24rpx;
  color: #9a9a9a;
  font-weight: bold;
}

.price_tail_line {
  font-size: 24rpx;
  color: #9a9a9a;
  font-weight: bold;
  text-decoration: line-through;
}

.more_area {
  display: flex;
  justify-content: space-between;
}

.product_title {
  font-size: 29rpx;
  font-weight: bold;
  color: #343434;
  width: 403rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.tag_area {
  display: flex;
  margin: 20rpx 0;
  min-height: 50rpx;
}

.tag {
  background: rgba(255, 255, 255, 0.3);
  border: 1rpx solid #1EBEAA;
  border-radius: 4rpx;
  color: #1EBEAA;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  margin-right: 16rpx;
  line-height: 22rpx;
  height: 20rpx;
}

.right_area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.ercode {
  width: 145rpx;
  height: 145rpx;
  margin-bottom: 18rpx;
}

.ertext {
  font-size: 20rpx;
  color: #bcbcbc;
  font-weight: bold;
}

.man_area {
  display: flex;
  align-items: center;
  position: relative;
}

.man_list {
  margin-left: 20rpx;
}

.man_info {
  display: flex;
}

.nickname {
  color: #343434;
  font-size: 23rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  max-width: 200rpx;
  margin-right: 10rpx;

}

.phone {
  color: #343434;
  font-size: 23rpx;
  font-weight: bold;
}

.man_rec {

  font-size: 20rpx;

  font-weight: 300;
  color: #343434;
}

.avatar_img {
  width: 57rpx;
  height: 57rpx;
  border-radius: 50%;
  overflow: hidden;
}

.logo_icon {
  width: 216rpx;
  height: 41rpx;
}

.footer {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 638rpx;
  height: 93rpx;
  border-top: 1rpx solid #E8E8E8;
  margin: 33rpx auto 0;
}

.brand_area {
  display: flex;
}

.brand_logo {
  width: 41rpx;
  height: 41rpx;
  border-radius: 50%;
}

.brand_name {
  font-size: 32rpx;
  color: #343434;
  font-weight: bold;
  margin-left: 9rpx;
}

.hibusinesszonename {
  color: #999999;
  font-size: 24rpx;
}

.partner-poster {
  position: absolute;
  top: -7rpx;
  left: -4rpx;
  width: 65rpx;
  height: 69rpx;
}