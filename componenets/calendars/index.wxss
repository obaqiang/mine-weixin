.calendar-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}

/* 月份外容器 */

.month-wrapper {
  width: 100%;
  /* height: 130rpx; *//* 边框应该用::after实现，后续更改 */
  border-bottom: 1px solid #eaeaea;
  height: 100rpx;
  line-height: 100rpx;
}

/* 日期格子的外容器 */

.calendar-wrapper .grid-wrapper {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(7, 100rpx);
  grid-auto-rows: 1fr;
}

.grid-wrapper .gird-item {
  min-height: 120rpx;
  display: flex;
  padding: 12rpx 0;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
}

/* 选中状态 */

.grid-wrapper .grid-item-current {
  background-color: #1ebeaa;
  color: #fff;
}

.grid-label-wrapper {
  width: 100%;
  font-size: 24rpx;
}

.grid-label-wrapper > .label-item {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  color: #aaa;
}

/* 星期 */

.grid-wrapper .grid-week {
  justify-content: center;
}

/* 日期 */

.grid-wrapper .grid-date {
  border: 1px solid transparent;
  border-radius: 10rpx;
  /* font-weight: bold; */
}

/* 禁用状态 */

.grid-wrapper .disable {
  color: #bbb;
}

/* 周末的颜色*/

.weekend {
  color: #1ebeaa;
}

/* calendar中自定义的tabs样式 */

.custom-calendar-tabs {
  width: 100%important;
  height: 100% !important;
  background-color: #fff !important;
  /* border-bottom: 1px solid #eaeaea !important; */
}

/* calendar中自定义的tab样式 */

.custom-calendar-tab {
  width: 24% !important;
  padding: 0 !important;
  height: 100rpx !important;
}

/* calendar中自定义的tab-title样式 */

.custom-calendar-tab-title {
  color: #999 !important;
}

.custom-calendar-tab-bar {
  /* width: 60rpx !important; */
  bottom: 0 !important;
}
